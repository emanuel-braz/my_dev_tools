{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
			"dom"
		],
		"sourceMap": true,
		"rootDir": "src",
		"noImplicitAny": false,
		"strict": false,
		"types": [
			"vscode",
			"mocha",
			"node"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}