{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": ["es6"],
		"sourceMap": true,
		"rootDir": "src",
		"noImplicitAny": false,
		"strict": false,
    	"types": ["vscode", "mocha", "node"],
    	"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
